<?xml version="1.0" encoding="utf-8" ?>
<pages:AWPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Autowont.Pages;assembly=Autowont"
             x:Class="Autowont.Pages.LoginPage"
             Padding="50,100">
  <Grid VerticalOptions="Center" HorizontalOptions="Center" RowSpacing="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
    </Grid.RowDefinitions>
    <Image Grid.Row="0" Source="Logo.png" HeightRequest="250" Aspect="AspectFit" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
    <Button Grid.Row="1" Text="Войти" FontFamily="SanFrancisco" HeightRequest="45" BackgroundColor="White"
            BorderColor="White" TextColor="Black" Command="{Binding LoginCommand}" />
    <Label Grid.Row="2" Text="Забыли пароль?" FontFamily="SanFrancisco" TextColor="Black" IsVisible="False"
           HorizontalOptions="Center" />
    <Image Grid.Row="3" Source="Separator.png" HeightRequest="5" Aspect="AspectFit" IsVisible="False" />
    <Label Grid.Row="4" Text="Войти как Гость?" FontFamily="SanFrancisco" TextColor="Black" IsVisible="False"
           HorizontalOptions="Center">

    </Label>
  </Grid>
</pages:AWPage>